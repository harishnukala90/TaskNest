rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       AUTHENTICATION
    ========================= */
    function isLoggedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /* =========================
       USERS COLLECTION
    ========================= */
    match /users/{userId} {

      // Anyone logged in can read user profiles
      allow read: if isLoggedIn();

      // Only user can edit their own profile
      allow update: if isOwner(userId);

      // No one can delete users
      allow delete: if false;

      // User created only during register
      allow create: if isLoggedIn();
    }

    /* =========================
       JOBS COLLECTION
    ========================= */
    match /jobs/{jobId} {

      // Anyone logged in can view jobs
      allow read: if isLoggedIn();

      // Only providers can create jobs
      allow create: if isLoggedIn()
        && request.resource.data.providerId == request.auth.uid;

      // Provider can update or delete ONLY their job
      allow update, delete: if isLoggedIn()
        && resource.data.providerId == request.auth.uid;
    }
  }
}
